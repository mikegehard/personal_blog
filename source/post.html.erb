<% wrap_layout :layout do %>
  <div class="blog_main">
    <article>

      <header>
        <time>
          <span class="month"><%= current_page.date.strftime('%b') %></span><span class="day"><%= current_page.date.strftime('%d') %></span><span class="year"><%= current_page.date.strftime('%Y') %></span>
        </time>
        <h2><%= current_page.title %></h2>
      </header>

      <section>
        <%= yield %>
      </section>

      <section class="disqus"><%= disqus %></section>
    </article>
  </div>
<% end %>